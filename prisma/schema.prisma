generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  country   String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetRequest {
  id        Int      @id @default(autoincrement())
  email     String
  ip        String
  createdAt DateTime @default(now())

  @@index([email])
  @@index([ip])
}

model PasswordResetToken {
  userId    String
  token     String   @unique
  used      Boolean
  expiresAt DateTime
}
